# ========================================
# APPLICATION CONFIGURATION
# ========================================
NODE_ENV=development
PORT=3000

# ========================================
# DATABASE CONFIGURATION (MySQL)
# ========================================
DB_HOST=localhost
DB_PORT=3307
DB_NAME=aptis_db
DB_USER=root
DB_PASSWORD=123456
# ========================================
# JWT CONFIGURATION
# ========================================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_ACCESS_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d

# ========================================
# AI PROVIDER CONFIGURATION
# ========================================
# Recommended: Google Gemini (most accurate, fastest)
# Fallback: Ollama (local, no internet needed)
# Get Gemini API Key: https://ai.google.dev/

# Google Gemini API Configuration (Cloud - Recommended)
GOOGLE_GEMINI_API_KEY=
GOOGLE_GEMINI_MODEL=gemini-2.0-flash

# Groq API Configuration (Fallback) - Free tier available
GROQ_API_KEY=
GROQ_MODEL=llama-3.1-8b-instant

# ========================================
# AZURE SPEECH SERVICE CONFIGURATION
# ========================================
# Azure Speech Service for enhanced speech-to-text and pronunciation assessment
# Get keys from: https://portal.azure.com → Cognitive Services → Speech
AZURE_SPEECH_KEY=
AZURE_SPEECH_ENDPOINT=https://southeastasia.stt.speech.microsoft.com/
AZURE_SPEECH_REGION=southeastasia

# ========================================
# EMAIL CONFIGURATION (Gmail SMTP)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password_here
EMAIL_FROM=APTIS System <noreply@aptis.com>

# ========================================
# FILE STORAGE CONFIGURATION
# ========================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800
# Max file size in bytes (50MB = 52428800)

# ========================================
# CORS CONFIGURATION
# ========================================
CORS_ORIGIN=*
# In production, set to your frontend URL: http://localhost:5173
