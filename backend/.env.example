# ========================================
# FILE STORAGE CONFIGURATION
# ========================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800
# Max file size in bytes (50MB = 52428800)

# ========================================
# CORS CONFIGURATION
# ========================================
CORS_ORIGIN=*
# In production, set to your frontend URL: http://localhost:5173

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes = 900000ms
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# WHISPER CONFIGURATION (Speech-to-Text)
# ========================================
WHISPER_MODEL=tiny
# Options: tiny, base, small, medium, large
# tiny (~100MB) is recommended for local deployment

# ========================================
# AI SCORING CONFIGURATION
# ========================================
AI_SCORING_TEMPERATURE=0.7
AI_SCORING_MAX_TOKENS=2048
AI_SCORING_TIMEOUT=30000
# Timeout in milliseconds (30 seconds)

# ========================================
# CLEANUP JOB CONFIGURATION
# ========================================
CLEANUP_OLD_FILES_DAYS=90
# Delete files older than N days
